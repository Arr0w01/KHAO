<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KHAO" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF1744</item>
        <item name="colorPrimaryVariant">#FFCA28</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>


        <!-- Customize your theme here. -->
<!--    <style name="BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">-->
<!--        <item name="bottomSheetStyle" > @style/bottomSheetStyleWrapper</item>-->
<!--    </style>-->

    </style>
    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="myNavigationDrawer">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Theme.KHAO.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.KHAO.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.KHAO.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>